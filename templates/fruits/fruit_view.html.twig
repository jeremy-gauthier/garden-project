{% extends 'base.html.twig' %}

{% block title %}{{ fruit.name }}{% endblock %}

{% block body %}


<h1 class="text-center bg-light"> {{ fruit.name }}</h1>
<div class="text-center">
    <img src ="{{ fruit.picture }}" heigth="700" width="300">
</div>
<br>
<table class="table">
<tbody>
    <tr>
      <th scope="row">Semi:</th>
      <td>{{ fruit.semi }}</td>
    </tr>
    <tr>
      <th scope="row">Récolte:</th>
      <td>{{ fruit.recolt }}</td>
    </tr>
    <tr>
      <th scope="row">Exposition:</th>
      <td>{{ fruit.exposition }}</td>
    </tr>
    <tr>
      <th scope="row">Sol:</th>
      <td>{{ fruit.sol }}</td>
    </tr>
    <tr>
      <th scope="row">Arrossage:</th>
      <td>{{ fruit.watering }}</td>
    </tr>
    <tr>
      <th scope="row">Conseils:</th>
      <td>{{ fruit.advice }}</td>
    </tr>
<tbody>
</table>
<div class="text-center">
<br>
   <h3 class="text-center"> Doit etre planté en : </h3>
<br>
  <p>{{ fruit.MonthPlant}}</p>
{% endblock %}