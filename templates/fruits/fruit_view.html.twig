{% extends 'base.html.twig' %}

{% block title %}{{ fruit.name }}{% endblock %}

{% block body %}


<h1 class="text-center bg-light"> {{ fruit.name }}</h1>
<div class="text-center">
    <img src ="{{ fruit.picture }}" heigth="700" width="300">
</div>
<br>
<table class="table">
